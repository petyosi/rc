[user]
    name = Petyo Ivanov
    email = underlog@gmail.com
	signingkey = 2EC535DE

[push]
    default = tracking

[color]
    diff = auto
    status = auto
    branch = auto

[core]
    excludesfile = ~/.gitignore
    autocrlf = false
    whitespace = cr-at-eol
    editor = nvim
	  pager = diff-so-fancy | less --tabs=4 -RFX

[format]
    pretty = %Cblue%h%Creset %Cgreen[%cr]%Creset (%an) %s

[alias]
    c = commit -m
    ch = cherry-pick
    co = checkout
    a = add
    d = diff
    dic = diff --cached
    ps = push
    s = status
    out = log origin..HEAD
    qpl = log --pretty=\"%Cblue%h%Creset %Cgreen[%cr]%Creset %s\" origin/production..origin/master
    l = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %Cblue%an%Creset' --abbrev-commit --date=relative
    lol = log --pretty=oneline --abbrev-commit --graph --decorate
    ci = commit
    ca = commit --amend
    eu = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
    au = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
    sync = "!git pull && git push"
    sub = submodule update --init
    pl = pull --rebase
    napalm ="!LC_ALL=en_GB git branch -vv | grep 'origin/.*: gone]' | awk '{print $1}' | xargs git branch -D && git prune"

[branch]
    autosetuprebase = always

[merge]
    tool = fugitive

[mergetool "fugitive"]
    cmd = nvim -f -c \"Gdiff\" \"$MERGED\"

[mergetool]
    keepBackup = false

[diff]
    algorithm = patience
    comparisonHeuristic = true
    tool = meld
[filter "lfs"]
	smudge = git-lfs smudge -- %f
    required = true
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
[credential]
	helper = osxkeychain

[init]
	defaultBranch = master

[interactive]
	diffFilter = diff-so-fancy --patch
[gpg]
	program = /opt/homebrew/bin/gpg
[commit]
	gpgsign = true
